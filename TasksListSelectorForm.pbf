  TasksListSelector_BasketButton = ButtonGadget(#PB_Any, 0, 0, 140, 30, "Basket")
  TasksListSelector_HardPlannedButton = ButtonGadget(#PB_Any, 0, 30, 140, 30, "Hard planned")
  TasksListSelector_SoftPlannedButton = ButtonGadget(#PB_Any, 0, 60, 140, 30, "Soft planned")
